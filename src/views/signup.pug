          //-     li
          //-       a.dropdown-item(href='#') Another action
          //-     li
          //-       a.dropdown-item(href='#') Something else here
        ul.navbar-nav.flex-row.flex-wrap.ms-md-auto
          //- li.nav-item
          //-   a.btn.btn-secondary(href=`users/signup`) Signup
          li.nav-item
            a.btn.btn-success(href=`/users/login`) Log In
  .container
    .row.mt-4.justify-content-center
      .card(style='width: 18rem;')
        .card-body
          h5.card-title User Registration
          form(action=`/users/signup` method='POST')
            label(for="username" class="form-label") Username:
            input#id(type='text' name='username' class="form-control")
            label(for="email" class="form-label") Email:
            input#id(type='text' name='email' class="form-control")
            label(for="password" class="form-label") Password:
            input#id(type='password' name='password' class="form-control")
            label(for="confirm_pass" class="form-label") Confirm Password:
            input#id(type='password' name='confirm_pass' class="form-control")
            if errors.message
              small#confir_passHelp.text-danger= errors.message
            br
            .d-grid.gap-2
              input.btn.btn-primary.btn-block(type="submit" value="Save")

  // Footer
  footer.footer.bg-black.small.text-center.text-white-50
