  .container
    .row
      //FORM
      .col-md-5
        .car(style='width: 22rem;')
          .card-body
            form(action='tasks/create' method='POST')
              .form-group
                input.form-control(type='text' name='title' id='' placeholder='Insert a Title')
              .form-group
                textarea.form-control(name='description' id='' cols='80' placeholder='Insert a Description')
              button.btn.btn-primary.btn-block(type='submit')
                | Add
      // LIST
      .col-md-7
        table.table.table-bordered.table-hover
          thead
            tr
              th N&deg;
              th Title
              th Description
              th Operations
          tbody
            each task, index in tasks
              tr
                td(scope='row')
                  = index + 1 
                if !task.status
                  td
                    = task.title
                else
                  td(style="text-decoration:line-through;")
                    = task.title
                if !task.status
                  td
                    = task.description
                else
                  td(style="text-decoration:line-through;")
                    = task.description
                td
                  .operations
                    a(href=`tasks/turn/${task._id}`)
                      if !task.status
                        i.far.fa-square
                      else
                        i.far.fa-check-square
                    a(href=`tasks/update/${task._id}`)
                      i.fas.fa-edit
                    a(href=`tasks/delete/${task._id}`)
                      i.fas.fa-trash-alt
            else
              tr
                td(colspan='4')
                  | There are no tasks
