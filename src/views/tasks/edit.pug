  .container
    .row.mt-4.justify-content-center
      .card(style='width: 18rem;')
        .card-header Edit Task
        .card-body
          form(action=`/tasks/update/${task.id}` method='POST')
            label(for="id" class="form-label") ID:
            input#id(type='text' name='id' value= task._id disabled='' class="form-control")
            label(for="title" class="form-label") Title:
            input#id(type='text' name='title' value= task.title class="form-control")
            label(for="modelo" class="form-label") Description:
            input#id(type='text' name='description' value= task.description class="form-control")
            label(for="lat" class="form-label") Status:
            input#id(type='text' name='status' value=`${task.status}` disabled='' class="form-control")
            br
            .d-grid.gap-2
              input.btn.btn-primary.btn-block(type="submit" value="Save")

