extends ../partials/_header

block content
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
    .container-fluid
      a.navbar-brand.btn.btn-primary(href='/home')
        i.fas.fa-chevron-left
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavDropdown.collapse.navbar-collapse.row.justify-content-between
        //- ul.navbar-nav.flex-row.flex-wrap.bg-navbar-nav.pt-2.py-md-0
        ul.navbar-nav.flex-row.flex-wrap.ms-md-auto
          li.nav-item
            a.navbar-brand.btn.btn-success(href='/users/signup')
              i.fas.fa-user-plus
          
  .table-responsive
    table.table
      thead
        tr
          th N&deg;
          th Username
          th email
          th Operations
      tbody
        each user, index in users
          tr
            td(scope='row')
              = index + 1 
            td
              = user.username
            td
              = user.email
            td
              .operations
                a(href=`/users/update/${user._id}`)
                  i.fas.fa-edit
                a(href=`/users/delete/${user._id}`)
                  i.fas.fa-trash-alt
        else
          tr
            td(colspan='4')
              | There are no users
