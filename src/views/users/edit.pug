  .container
    .row.mt-4.justify-content-center
      .card(style='width: 18rem;')
        .card-body
          h5.card-title Edit User
          form(action=`/users/update/${user.id}` method='POST')
            label(for="id" class="form-label") ID:
            input#id(type='text' name='id' value= user._id disabled='' class="form-control")
            label(for="username" class="form-label") Username:
            input#id(type='text' name='username' value= user.username class="form-control")
            label(for="email" class="form-label") Email:
            input#id(type='text' name='email' value= user.email class="form-control")
            //- if errors.message
            //-   small#confir_passHelp.text-danger= errors.message
            br
            .d-grid.gap-2
              input.btn.btn-primary.btn-block(type="submit" value="Save")

  footer.footer.bg-black.small.text-center.text-white-50
