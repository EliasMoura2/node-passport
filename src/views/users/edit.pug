block content
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark
    .container-fluid
      a.navbar-brand.btn.btn-primary(href='/users')
        i.fas.fa-chevron-left
        //- i.fas.fa-arrow-alt-circle-left
